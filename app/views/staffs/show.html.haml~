    - @rooms.each do |room|
      %tr
        - if room.day == "monday"
          %td= "วันจันทร์"
        - elsif room.day == "tuesday"
          %td= "วันอังคาร"
        - elsif room.day == "wednesday"
          %td= "วันพุธ"
        - elsif room.day == "thursday"
          %td= "วันพฤหัสบดี"
        - elsif room.day == "friday"
          %td= "วันศุกร์"
        - elsif room.day ==  "saturday"
          %td= "วันเสาร์"
        - else 
          %td= "วันอาทิตย์"        
        %td= room.first
        %td= room.second
        %td= room.third
        %td= room.fourth
        %td= room.fifth
        %td= room.sixth
        %td= room.seventh
        %td= room.eighth
        

