%h1 Search room

= form_tag search_result_path ,:method=>:get do

  = label :amount, nil, 'Amount'
  = text_field :amount, nil

  = label :day, nil, 'Day'
  = select :day, nil, @day_list

  = label :section, 'Section'
  = select :section, nil, @time

  = submit_tag 'ค้นหา'

= link_to 'Back', rooms_path
