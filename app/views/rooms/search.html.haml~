%h3 กรุณาระบุข้อมูลที่จำเป็นสำหรับการค้นหาห้องว่าง
%h5 (หากไม่ทราบจำนวนคน กรุณาเว้นว่างไว้)

= form_tag search_result_path ,:method=>:get do

  = label :amount, nil, 'Amount'
  = text_field :amount, nil

  = label :room_type, :type, 'Type'
  = select :room_type, :type, @roomtype

  = label :day, :day, 'Day'
  = select :day, :day, @day_list

  = select_date Time.now+6.days,:order=>[:day,:month,:year]_

  = label :section, 'Section'
  = select :section, nil, @time
  %br
  = submit_tag 'search room'

